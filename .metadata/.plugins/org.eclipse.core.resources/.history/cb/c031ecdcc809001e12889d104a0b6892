	$(document).ready(function(){
		/* 
		div + p : div 요소의 바로 다음에 나오는 형제 p 요소 선택
		div ~ p : div 요소의 다음에 나오는 모든 형제 p 요소 선택 */
		
		$('label + input').css('border','1px solid blue');
		$('div.start ~ div').css('background','pink');
		
	});
	
</script>
