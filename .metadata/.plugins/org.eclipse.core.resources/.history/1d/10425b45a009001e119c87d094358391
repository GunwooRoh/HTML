        window.onload = function f() {
            var d = new Date();
            document.getElementById("time").innerHTML = "현재 날짜와 시간 : " + d.getHours() + "시 "
                + d.getMinutes() + "분 " + d.getSeconds() + "초입니다."
        }
        setInterval("location.reload()", 1000);
    </script>
